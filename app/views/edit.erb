<div class="container">
<h2>Here is your secret key!</h2>

<p>Do not lose it!!!!</p>

<p><%=@post[0].secret_key%></p>

</div>

<div class="container cf">
  <h1 class="hero">Edit your Post</h1>
  <form class="cf" action="/posts/<%=@post[0].id%>" method="post">
    <input type="hidden" name="post[category_id]" value="<%=@post[0].category_id%>">
    <div class ="row">
      <label for="post_title">Post Title</label>
      <input id="post_title" type="text" name="post[title]" placeholder="Chair" value="<%=@post[0].try(:title)%>">
    </div>
    <div class ="row">
      <label for="description">Description</label>
      <input id="description" type="text" name="post[description]" placeholder="For sitting!" value="<%=@post[0].try(:description)%>">
    </div>
    <div class ="row">
      <label for="price">Price</label>
      <input id="price" type="tel" name="post[price]" placeholder="1000000" value="<%=@post[0].try(:price)%>">
    </div>
    <div class ="row">
      <label for="email">Email</label>
      <input id="email" type="email" name="post[email]" placeholder="bob@bob.com" value="<%=@post[0].try(:email)%>">
    </div>
    <div class ="row">
      <input id="submit_button" type="Submit">
    </div>
  </form>
</div>
